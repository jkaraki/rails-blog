<%= form_for(@post, html: {multipart: true}) do |f| %>

<!-- url: user_path(current_user) -->
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list %>
  </div>

  <div>
    <% if @post.image.exists? %>
    <%= image_tag @post.image.url(:medium) %><br>
    <%= f.label :image_delete %><br>
    <%= f.check_box :image_delete, :label => 'Delete Image' %>

    <% end %><br>


    <%= f.label :image, "Attach an Image" %><br>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
