<!-- Displays "posts tagged with ... "  -->
<h1>Posts Tagged with <%= @tag.name %></h1>

<h2><% @tag.posts.each do |post| %></h2>
  <h3><%= link_to post.title, post_path(post) %></h3>
    <p><%= post.body %></p>
  <% end %>

<!-- Option to delete the tag -->
    <%= link_to "Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Are you sure you want to delete this tag?"}  %>
