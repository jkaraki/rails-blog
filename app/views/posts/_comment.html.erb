<div>
  <h4>Username: <%= comment.username %></h4>
  <p class="comment"><%= comment.body %></p>
  <p>Posted <%= distance_of_time_in_words(Time.now, comment.created_at) %> ago</p>

  <!-- option to delete comment -->
</div>
<div>
  <% if logged_in? && current_user.username == comment.username %>
    <h4>
      <em><%= link_to 'delete comment', [@post, comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %><em>

    </h4>
  <% end %>
</div>

